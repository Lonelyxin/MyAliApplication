<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height"
    android:background="@color/alipayColor"
    android:gravity="center_vertical"
    android:paddingLeft="14dp"
    android:paddingRight="14dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="朋友"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/iv_lianxi"
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@+id/iv_sousuo"
        android:src="@drawable/search" />

    <ImageView
        android:id="@+id/iv_sousuo"
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@+id/iv_plus"
        android:scaleType="centerInside"
        android:src="@drawable/lianxiren" />

    <ImageView
        android:id="@+id/iv_plus"
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:scaleType="centerInside"
        android:src="@drawable/jia" />
</RelativeLayout>
